from airflow import DAG
from airflow.providers.papermill.operators.papermill import PapermillOperator
from datetime import datetime

default_args = {
    'owner': 'airflow',
    'start_date': datetime(2025, 1, 1),
}

with DAG(
    dag_id='monthly_demand_prediction',
    default_args=default_args,
    schedule_interval='0 0 6 * *',  # Every 6th day of the month at midnight
    catchup=False,
    tags=['prediction']
) as dag:

    predict_task = PapermillOperator(
        task_id='generate_predictions',
        input_nb='/opt/notebooks/generate_predictions.ipynb',
        output_nb='/opt/airflow/logs/predict_output_{{ ds }}.ipynb',
        parameters={"cwd": "/opt/data"}
    )
